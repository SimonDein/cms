<% if session[:error] %>
    <p class="error"><%= session.delete(:error) %></p>
<% end %>

<% if session[:success] %>
    <p class="success"><%= session.delete(:success) %></p>
<% end %>

<ul>
  <% @files.each do |file| %>
    <a href="/<%= file %>"><li><%= file %></li></a>
    <a href="/<%= file %>/edit">Edit</a>
  <% end %>
</ul>